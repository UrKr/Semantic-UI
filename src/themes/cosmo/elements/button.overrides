.ui.button {
    border: @gray-darker;
    border-width: 2px;
    &.primary {
        border: @primaryColor;
    }
    &.positive {
        border: @positiveColor;
    }
    &.negative {
        border: @negativeColor;
    }
    &.basic {
        color: rgba(0, 0, 0, 0.7) !important;
        &:hover {
            color: rgba(0, 0, 0, 0.8) !important;
        }
    }
}
