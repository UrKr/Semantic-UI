.ui.segment {
    * {
        border: @gray;
    }

    &.piled {
        &::after, &::before {
            background-color: lighten(@background, 5%);
        }
    }
    &.stacked {
        &::after {
            background-color: lighten(@background, 5%);
            border: none;
        }
    }
}
