.ui.message {
    border: none;
    box-shadow: none !important;

    &.positive {
        background-color: darken(@positiveColor, 25%);
    }

    &.info {
        background-color: lighten(@infoColor, 25%);
    }

    &.warning {
        background-color: @warningColor;
    }

    &.negative {
        background-color: @negativeColor;
    }

    a:not(.button) {
        color: #fff;
        font-weight: bold;
    }

    .close {
        color: #fff;
    }
}
