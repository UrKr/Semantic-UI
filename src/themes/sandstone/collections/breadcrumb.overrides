.ui.breadcrumb {
    background-color: @gray-lighter;
    padding: 0.5em;
    border-radius: 4px;

    font-size: 11px;
    line-height: 22px;
    font-weight: 500;
    text-transform: uppercase;

    border: 1px solid @gray-light;

    .active.section {
        color: darken(@linkColor, 10%);
        &:hover {
            color: darken(@linkHoverColor, 10%);
        }
    }
}
